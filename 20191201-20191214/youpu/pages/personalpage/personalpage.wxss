.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  width: 100%;
  top: 0;
  background-color: rgb(253, 161, 50);
  z-index: 10;
}
.title {
  font-family: PingFangSC-Semibold;
	font-size: 120%;
	font-weight: bold;
	line-height: 70rpx;
	letter-spacing: -1rpx;
  color: #f4f4f4;
  position: absolute;
}
.back {
  width: 22rpx;
  height: 41rpx;
  position: fixed;
  top: 55rpx;
  left: 30rpx;
  z-index: 10;
}

.background {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 440rpx;
  position: relative;
  z-index: 9
}
.user {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute
}
.avatar {
  height: 104rpx;
  width: 104rpx;
  border-radius: 50%;
}
.nickname {
  color: white;
  margin: 25rpx 0 0 0;
  font-size: 105%;
  font-weight: bold;
}
.homebackground {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: -1;
}
.comments {
  position: absolute;
}
.comment {
  background-color: white;
  margin: 15rpx 0;
  padding: 25rpx;
}
.comment-shopinfo {
  border: 1px solid rgb(253, 150, 51);
  display: flex; 
  flex-direction: row;
  margin: 15rpx 0;
  padding: 10rpx;
}
.comment-shopinfo-avatar-image {
  width: 70rpx;
  height: 70rpx;
  margin: 0 20rpx 0 0;
}
.comment-shopinfo-content {
  width: 75%;
}
.comment-shopinfo-content-title {
  font-size: 90%;
}
.comment-shopinfo-content-location {
  font-size: 75%;
  color: rgb(160, 160, 160);
  display: flex;
  align-items: center;
}
.comment-shopinfo-content-location image {
  width: 18rpx;
  height: 25rpx;
  margin: 0 5rpx 0 0;
}
.comment-shopinfo-like {
  font-size: 80%;
}
.comment-shopinfo-like-icon {
  width: 23rpx;
  height: 20rpx;
  margin: 0 5rpx 0 0;
}